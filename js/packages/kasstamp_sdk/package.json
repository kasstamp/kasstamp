{
  "name": "@kasstamp/sdk",
  "version": "0.0.10",
  "description": "Professional Kaspa SDK - Zero-config enterprise blockchain integration",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "license": "ISC",
  "scripts": {
    "build": "npm run build:bundle && npm run build:types",
    "build:bundle": "tsup src/index.ts --format esm --splitting false --clean --no-splitting --sourcemap",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly"
  },
  "dependencies": {
    "@kasstamp/utils": "*",
    "@kasstamp/rpc": "*",
    "@kasstamp/wallet": "*",
    "@kasstamp/kaspa_wasm_sdk": "*",
    "@kasstamp/tx": "*",
    "@kasstamp/crypto": "*",
    "@kasstamp/stamping": "*",
    "@kasstamp/chunking": "*",
    "@kasstamp/kaspa_api": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0"
  }
}
