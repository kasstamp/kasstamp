{
  "name": "@kasstamp/tx",
  "version": "0.0.0",
  "description": "Transaction building and processing for Kasstamp",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "license": "ISC",
  "scripts": {
    "build": "tsup src/index.ts --format esm --splitting false --clean --no-splitting --sourcemap && tsc -p tsconfig.json --emitDeclarationOnly || echo \"⚠️  Types generation failed but JS is OK\"",
    "build:bundle": "tsup src/index.ts  --dts --format esm --splitting false --clean --no-splitting --sourcemap"
  },
  "dependencies": {
    "@kasstamp/utils": "*",
    "@kasstamp/rpc": "*",
    "@kasstamp/kaspa_wasm_sdk": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.0"
  }
}
